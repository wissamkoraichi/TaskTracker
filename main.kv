#:include kv/homescreen.kv
#:include kv/settingsscreen.kv
#:include kv/changeavatarscreen.kv
#:include kv/loginscreen.kv
#:include kv/addfriendscreen.kv
GridLayout:
    cols:1
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#333f48")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows:1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .05
            Image:
                source: "icons/icons8-symbol-30.png"
            Image:
                source: "icons/icons8-message-30.png"
        FloatLayout:
            #put two
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#333f48")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 1
            pos_hint: {"top": .95, "left": 1}
            size_hint: 1, .15
            #put two
            Image:
                source: "icons/icons8-night-30.png"
                size_hint: .25, 0.5
                pos_hint: {"top": 1, "right": 0.25}
            Image:
                source: "icons/avatar.png"
                id: avatar_image
                size_hint: 0.5, 1
                pos_hint: {"top": 1, "right": 0.75}
            Image:
                source: "icons/icons8-evening-30.png"
                size_hint: .25, 0.5
                pos_hint: {"top": 1, "right": 1}
        ScreenManager:
            size_hint: 1, 0.799
            pos_hint: {"top": .799, "left": 1}
            id: screen_manager
            LoginScreen:
                name: "login_screen"
                id: login_screen
            HomeScreen:
                name: "home_screen"
                id: home_screen
            SettingsScreen:
                name: "settings_screen"
                id: settings_screen
            ChangeAvatarScreen:
                name: "change_avatar_screen"
                id: change_avatar_screen
            AddFriendScreen:
                name: "add_friend_screen"
                id: add_friend_screen